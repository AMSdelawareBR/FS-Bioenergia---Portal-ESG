<mvc:View controllerName="br.agr.fs.esgsurvey.controller.QuestionItem" displayBlock="true" xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.m.semantic" xmlns="sap.m" xmlns:tnt="sap.tnt" xmlns:core="sap.ui.core">
	<Page id="questionItem" showHeader="false">
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button text="Salvar" type="Accept" visible="{questionView>/edit}" press="onSaveQuestionItem"/>
				<Button text="Cancelar" type="Reject" press="onNavBack" />
			</OverflowToolbar>
		</footer>    
    </Page>
</mvc:View>