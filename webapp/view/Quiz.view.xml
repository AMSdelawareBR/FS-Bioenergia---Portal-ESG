<mvc:View controllerName="br.agr.fs.esgsurvey.controller.Quiz" displayBlock="true" xmlns:mvc="sap.ui.core.mvc"
	xmlns:semantic="sap.m.semantic" xmlns="sap.m" xmlns:tnt="sap.tnt" xmlns:core="sap.ui.core">
	<semantic:DetailPage id="page" title="{i18n>quizzes}" showFooter="false">
		<semantic:content>
            <Table id="idQuizTable"
            inset="true"
            items="{
                path: '/ZC_GEN_QUESTIONARIO'
            }">
            <headerToolbar>
                <OverflowToolbar>
                    <content>
                        <ToolbarSpacer />
                        <Button text="Criar" press="onQuizCreate"/>
                    </content>
                </OverflowToolbar>
            </headerToolbar>
            <columns>
                <Column>
                    <Text text="Versão" />
                </Column>
                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true">
                    <Text text="Identicação" />
                </Column>
                <Column
                    minScreenWidth="Desktop"
                    demandPopin="true">
                    <Text text="Período" />
                </Column>
                <Column
                    minScreenWidth="Desktop"
                    demandPopin="true">
                    <Text text="Status" />
                </Column>
            </columns>
            <items>
                <ColumnListItem vAlign="Middle">
                    <cells>
                        <Text
                            text="{Version}" />                    
                        <ObjectIdentifier
                            title="{Descricao}"/>
                        <Text
                            text="{ path: 'DataInicio', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd/MM/yyyy', UTC: true }} - 
                                  { path: 'DataFim', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'dd/MM/yyyy', UTC: true }}" />
                        <Text
                            text="{
                                   path: 'Status',
                                   formatter: '.formatter.questionStatusText'
                                  }" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
		</semantic:content>
	</semantic:DetailPage>
</mvc:View>